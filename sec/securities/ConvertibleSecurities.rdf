    <!-- Ontology/File-Level Metadata for the FIBO SEC Convertible Securities Ontology -->

        <sm:filename rdf:datatype="&xsd;string">ConvertibleSecurities.rdf</sm:filename>
        <sm:fileAbbreviation rdf:datatype="&xsd;string">fibo-sec-sec-cnv</sm:fileAbbreviation>
        <owl:versionIRI rdf:resource="http://spec.edmcouncil.org/fibo/SEC/20160501/Securities/ConvertibleSecurities/"/>
        <sm:fileAbstract rdf:datatype="&xsd;string">This ontology defines concepts relevant to convertibility of securities, including convertible security, and conversion term.</sm:fileAbstract>

        <sm:dependsOn rdf:datatype="&xsd;anyURI">http://spec.edmcouncil.org/fibo/FND/</sm:dependsOn>
        <sm:dependsOn rdf:datatype="&xsd;anyURI">http://spec.edmcouncil.org/fibo/FBC/</sm:dependsOn>

